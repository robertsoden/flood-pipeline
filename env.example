# Environment Variables Template
# Copy this file to .env and fill in your actual values
# .env is gitignored and will not be committed

# =====================================================
# API KEYS (External Services)
# =====================================================

# OpenAI API (for Stage 4 if using GPT-4)
OPENAI_API_KEY=your_openai_key_here
OPENAI_ORG_ID=your_org_id_here

# Anthropic Claude API (if using Claude)
ANTHROPIC_API_KEY=your_anthropic_key_here

# =====================================================
# GEOCODING
# =====================================================

# Nominatim User Agent (required by OpenStreetMap)
NOMINATIM_USER_AGENT=FloodEnrichmentTool/1.0

# Google Maps API (if using instead of Nominatim)
# GOOGLE_MAPS_API_KEY=your_google_maps_key_here

# =====================================================
# DATABASE (if using)
# =====================================================

# PostgreSQL connection
# DATABASE_URL=postgresql://username:password@localhost:5432/floods

# MongoDB connection
# MONGO_URL=mongodb://localhost:27017/floods

# =====================================================
# OLLAMA / LOCAL LLM
# =====================================================

# Ollama API Base (usually localhost)
OLLAMA_API_BASE=http://localhost:11434

# Model name (if overriding config)
# OLLAMA_MODEL=qwen2.5:14b-instruct-q5_K_M

# =====================================================
# LOGGING & MONITORING
# =====================================================

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Weights & Biases (if using)
# WANDB_API_KEY=your_wandb_key_here
# WANDB_PROJECT=flood-enrichment

# MLflow tracking (if using remote)
# MLFLOW_TRACKING_URI=http://localhost:5000

# =====================================================
# DEVELOPMENT
# =====================================================

# Development mode (enables debug features)
DEV_MODE=false

# Skip expensive operations in dev
SKIP_MODEL_TRAINING=false

# =====================================================
# PATHS (if overriding defaults)
# =====================================================

# Custom data directory
# DATA_DIR=/path/to/your/data

# Custom models directory
# MODELS_DIR=/path/to/your/models
